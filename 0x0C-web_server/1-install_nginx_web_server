#!/usr/bin/env bash
#command

# sudo apt update
# sudo apt-get -y install nginx
sudo mkdir -p /var/www/InnVista.tech
sudo chmod -R 755 /var/www/InnVista.tech
sudo touch index.html
sudo echo "hello world!" >/var/www/InnVista.tech/index.html
sudo touch /etc/nginx/sites-enabled/InnVista_config

sudo echo "server {
        listen 80;
        listen [::]:80;

        root /var/www/InnVista.tech;
        index index.html;

        server_name InnVista.tech www.InnVista.tech;

        location / {
                try_files $uri $uri/ =404;
        }
}" >/etc/nginx/sites-enabled/InnVista_config
sudo service nginx restart
